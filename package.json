{
    "name": "grig",
    "version": "0.2.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "description": "a lightweight nested messages i18n library with smart ts prompt can be used in react , vue , svelte , solid , etc...",
    "homepage": "https://github.com/leafio/grig",
    "files": [
        "lib"
    ],
    "types": "./lib/index.d.ts",
    "main": "./lib/index.umd.js",
    "module": "./lib/index.js",
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./lib/index.js",
            "require": "./lib/index.cjs"
        },
        "./vue": {
            "types": "./lib/vue.d.ts",
            "import": "./lib/vue.js",
            "require": "./lib/vue.cjs"
        },
        "./react": {
            "types": "./lib/react.d.ts",
            "import": "./lib/react.js",
            "require": "./lib/react.cjs"
        },
        "./solid": {
            "types": "./lib/solid.d.ts",
            "import": "./lib/solid.js",
            "require": "./lib/solid.cjs"
        },
        "./svelte": {
            "types": "./lib/svelte.d.ts",
            "import": "./lib/svelte.js",
            "require": "./lib/svelte.cjs"
        }
    },
    "license": "MIT",
    "keywords": [
        "i18n",
        "react",
        "vue",
        "svelte",
        "solid",
        "language",
        "international",
        "localization",
        "intl"
       
     
    ],
    "devDependencies": {
        "@rollup/plugin-typescript": "^11.1.5",
        "@sveltejs/vite-plugin-svelte": "^3.1.0",
        "@types/node": "^20.8.6",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.1.0",
        "@vitejs/plugin-react-swc": "^3.3.2",
        "eslint": "^8.45.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "react": "^18",
        "react-dom": "^18",
        "solid-js": "^1.8.17",
        "svelte": "^4.2.17",
        "tslib": "^2.6.2",
        "typescript": "^5.3.2",
        "vite": "^4.4.5",
        "vite-plugin-dts": "^3.6.2",
        "vue": "^3"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*",
        "solid-js": "*",
        "svelte": "*",
        "vue": "*"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "react-dom": {
            "optional": true
        },
        "vue": {
            "optional": true
        },
        "solid-js": {
            "optional": true
        },
        "svelte": {
            "optional": true
        }
    }
}
